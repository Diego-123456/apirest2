<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Menú principal"
             x:Class="SoftRapidBus.Menu">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Servicio de Viajes" FontSize="20" FontAttributes="Bold" TextColor="Blue"
                   HorizontalOptions="Center" Margin="20"></Label>
            <Image Source="RapidBuss.png" Margin="10,-60,10,10" Scale="0.6" />
            <Button x:Name="btnTerminales"  Text="Terminales" Clicked="btnTerminales_Clicked" Margin="10,-60,10,10" TextColor="Blue" CornerRadius="10"/>
            <Button x:Name="btnPresentación" Clicked="btnPresentación_Clicked" Text="Presentación" Margin="10,10,10,10" TextColor="Blue" CornerRadius="10"/>
            <Button x:Name="btnTipos" Clicked="btnTipos_Clicked" Text="Tipos Servicios" Margin="10,10,10,10" TextColor="Blue" CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>